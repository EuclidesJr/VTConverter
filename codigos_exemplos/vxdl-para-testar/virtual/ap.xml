<?xml version="1.0" encoding="UTF-8"?>
<description xmlns="http://www.vxdlforum.org/vxdl"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.vxdlforum.org/vxdl VXDL.xsd">
	<virtualInfrastructure>
		<id>aaaa</id>
		<owner>useaaaarLyon</owner>
		<user>userLyon</user>
		<totalTime>PT4H</totalTime>

		<vNode>
			<id>paris</id>
            <location>paris.fr</location>
			<cpu>
				<cores>
					<simple>1</simple>
				</cores>
				<frequency>
					<interval>
						<min>2.0</min>
					</interval>
					<unit>GHz</unit>
				</frequency>
			</cpu>
			<memory>
				<simple>1</simple>
				<unit>GB</unit>
			</memory>
			<storage>
				<interval>
					<min>300</min>
				</interval>
				<unit>GB</unit>
			</storage>
		</vNode>

		<vAccessPoint>
            <id>ap</id>
			<nat>
				<inPort>22</inPort>
				<inEndpoint>node test</inEndpoint>
				<region>1</region>
				<outPort>22</outPort>
				<protocol>TCP</protocol>
			</nat>
		</vAccessPoint>

		<vLink >
            <id>link1</id>
			<bandwidth>
				<forward>
					<interval>
						<min>1.0</min>
					</interval>
					<unit>Mbps</unit>
				</forward>
			</bandwidth>
			<source>ap</source>
			<destination>paris</destination>
		</vLink>

	</virtualInfrastructure>
</description>

